{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "noEmitOnError": true
    },
    "include": [
        "src"
    ]
}
